<?xml version="1.0" encoding="utf-8"?>
<layout>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cam_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cameraswitch"
            android:padding="2dp"
            android:layout_marginTop="20dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/s_cam_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/s_camera"
            android:textColor="@color/label"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="25dp"

            app:layout_constraintTop_toTopOf="@id/cam_icon"
            app:layout_constraintStart_toEndOf="@id/cam_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/cam_icon"
            app:layout_constraintVertical_chainStyle="packed"
            />


        <View
            android:id="@+id/separator"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/label_secondary"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/s_cam_desc"
            app:layout_constraintStart_toStartOf="@id/s_cam_desc"
            app:layout_constraintEnd_toEndOf="parent"
            />



        <!--    second item [just decided to compound them]-->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/key_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/key"
            android:padding="2dp"
            android:layout_marginTop="20dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator"
            />

        <TextView
            android:id="@+id/key_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/reset_passcode"
            android:textColor="@color/label"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="25dp"

            app:layout_constraintTop_toTopOf="@id/key_icon"
            app:layout_constraintStart_toEndOf="@id/key_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/key_icon"
            app:layout_constraintVertical_chainStyle="packed"
            />


        <View
            android:id="@+id/s_separator"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:background="@color/label_secondary"
            android:layout_marginTop="20dp"

            app:layout_constraintTop_toBottomOf="@id/key_desc"
            app:layout_constraintStart_toStartOf="@id/key_desc"
            app:layout_constraintEnd_toEndOf="parent"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>