<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="otpMessage"
            type="String" />
        <variable
            name="isSuccess"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:animateLayoutChanges="true"
        >

        <TextView
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Please enter the OTP sent to your email V****@kredily.com and your phone number 9******432"
            android:text="@{otpMessage}"
            android:textColor="@color/label"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="8dp"
            android:paddingBottom="30dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".166"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".3332"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/third"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".4998"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fourth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".6664"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fifth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".8330"
            />



        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otp_1"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="0"
            android:inputType="number"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="15dp"

            tools:text="8"
            android:textColor="@color/label_secondary"
            android:textSize="11sp"
            android:gravity="center"

            android:layout_marginHorizontal="8dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/first"
            app:layout_constraintTop_toBottomOf="@id/message"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otp_2"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="0"
            android:inputType="number"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="15dp"

            tools:text="8"
            android:textColor="@color/label_secondary"
            android:textSize="11sp"
            android:gravity="center"

            android:layout_marginHorizontal="8dp"

            app:layout_constraintStart_toStartOf="@id/first"
            app:layout_constraintEnd_toEndOf="@id/second"
            app:layout_constraintTop_toBottomOf="@id/message"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otp_3"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="0"
            android:inputType="number"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="15dp"

            tools:text="8"
            android:textColor="@color/label_secondary"
            android:textSize="11sp"
            android:gravity="center"

            android:layout_marginHorizontal="8dp"

            app:layout_constraintStart_toStartOf="@id/second"
            app:layout_constraintEnd_toEndOf="@id/third"
            app:layout_constraintTop_toBottomOf="@id/message"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otp_4"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="0"
            android:inputType="number"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="15dp"

            tools:text="8"
            android:textColor="@color/label_secondary"
            android:textSize="11sp"
            android:gravity="center"

            android:layout_marginHorizontal="8dp"

            app:layout_constraintStart_toStartOf="@id/third"
            app:layout_constraintEnd_toEndOf="@id/fourth"
            app:layout_constraintTop_toBottomOf="@id/message"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otp_5"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="0"
            android:inputType="number"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="15dp"

            tools:text="8"
            android:textColor="@color/label_secondary"
            android:textSize="11sp"
            android:gravity="center"

            android:layout_marginHorizontal="8dp"

            app:layout_constraintStart_toStartOf="@id/fourth"
            app:layout_constraintEnd_toEndOf="@id/fifth"
            app:layout_constraintTop_toBottomOf="@id/message"
            />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/otp_6"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="0"
            android:inputType="number"

            tools:text="8"
            android:textColor="@color/label_secondary"
            android:textSize="11sp"
            android:gravity="center"

            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="15dp"

            android:layout_marginHorizontal="8dp"

            app:layout_constraintStart_toStartOf="@id/fifth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>